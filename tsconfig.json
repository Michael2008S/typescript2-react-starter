{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": false,

    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true

    /* should use linter... */
    // "allowUnreachableCode": false,
    // "noImplicitThis": true,
    // "noImplicitReturns": true
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "build"
  ]
}